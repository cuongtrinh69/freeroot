################################
# Khá»Ÿi Ä‘á»™ng Ubuntu trong PRoot #
################################

LAUNCH_SHELL="/bin/bash"
[ ! -e "$ROOTFS_DIR$LAUNCH_SHELL" ] && LAUNCH_SHELL="/bin/sh"

exec $ROOTFS_DIR/usr/local/bin/proot \
--rootfs="${ROOTFS_DIR}" \
--link2symlink \
--kill-on-exit \
--root-id \
--cwd=/root \
--bind=/proc \
--bind=/dev \
--bind=/sys \
--bind=/tmp \
--bind=/etc/resolv.conf \
"$LAUNCH_SHELL"
